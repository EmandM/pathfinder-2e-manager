{
  "extends": ["./tsconfig.settings.json"],
  "compilerOptions": {
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "vite/client",
      "unplugin-icons/types/vue",
      "unplugin-vue-router/client"
    ]
  },
  "vueCompilerOptions": {
    "target": 3
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "*.config.ts"],
  "exclude": ["src/scraper/*.ts"]
}
